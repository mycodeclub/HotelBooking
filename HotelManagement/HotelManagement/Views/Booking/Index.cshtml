@model List< HotelManagement.Models.Booking>

<a class="float-right" href="/Booking/Create">Add New Booking </a>
<table class="table table-hover">
    <thead>
        <tr>
            <th> Name </th>
            <th> Phone </th>
            <th> Gov Id </th>
            <th> Room Numbers </th>
            <th> Number Of Guests </th>
            <th> Check-In Date   </th>
            <th> Check-Out Date   </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Guests.FirstOrDefault().FullName</td>
                <td>@booking.Guests.FirstOrDefault().Phone</td>
                @*  <td>@booking.Guests.FirstOrDefault().GorvnIdType.IdType</td>
            *@
                <td>@booking.Guests.FirstOrDefault().GovnIdNumber</td>
                <td>@booking.Room.RoomNumber</td>
                <td>@booking.NumberOfGuests</td>
                <td>@booking.ExpectedCheckIn</td>
                <td>@booking.ExpectedCheckOut</td>
                <td> <img id="GuestDocpreview" src="@booking.Guests.FirstOrDefault().GovIdFilePath" alt="Uploaded Image" width="100" /></td>

                <td><a href="/Booking/Create/@booking.UniqueId"> Edit </a></td>
            </tr>
        }
    </tbody>
</table>