@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> signInManager;
@model HotelManagement.ViewModels.Login
@{
    ViewData["Title"] = "Login";
    Layout = null;

}
<div class="card">

    <div class="container">
        <div class="card-body">
            <form class="form-horizontal"  asp-area="Admin" asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="LoginName"></label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="LoginName" placeholder="Enter email" class="form-control" />
                        <span asp-validation-for="LoginName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="control-label col-sm-2" asp-for="Password"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-sm-10">
                        <div class="checkbox">

                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
            </form>
        </div>
       
   
    </div>
</div>
