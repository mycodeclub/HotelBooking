@model IEnumerable<HotelManagement.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedCheckIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedCheckOut)
            </th> 
            
            <th>
                @Html.DisplayNameFor(model => model.BookingAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedCheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedCheckOut)
            </td> 
             
            <td>
                @Html.DisplayFor(modelItem => item.BookingAmt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BalanceAmt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdatedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniqueId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniqueId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UniqueId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
